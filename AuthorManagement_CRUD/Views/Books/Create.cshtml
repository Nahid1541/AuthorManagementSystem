@model AuthorManagement_CRUD.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h1>Add New Book</h1>

<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="BookName" class="col-form-label col-2"></label>
            <div class="col-6">
                <input type="text" asp-for="BookName" class="form-control" />
            </div>
            <div class="col-4">
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>

            <div class="row mb-2">
                <div class="col-10">
                    <input type="submit" value="Save" class="btn btn-success mt-2" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fa fa-arrow-circle-left"></i> Back to list</a>
</div>

