
@model AuthorManagement_CRUD.Models.Author

@{
    ViewData["Title"] = "Delete";
}

<div class="card mt-4">
    <div class="card-header bg-danger text-white">
        <h1 class="card-title">Delete Author</h1>
    </div>

    <div class="card-body">
        <h3 class="card-subtitle mb-3" style="color:red;">Are you sure you want to delete this author?</h3>

        <div>
            <dl class="row">
                <div class="col-8">
                    <dt class="col-sm-2">
                        Author Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AuthorName)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DateOfBirth)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Age)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Age)
                    </dd>
                </div>

                <div cite="col-4">
                    <dt class="col-sm-2">
                        Books
                    </dt>
                    <dd class="col-sm-10">
                        @foreach (var item in Model.AuthorBooks)
                        {
                            <p>@item.Book.BookName</p>
                        }
                    </dd>
                </div>
            </dl>

            <form asp-action="Delete" asp-route-id="@Model.AuthorId" method="post">
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


